{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@core/*": ["../frontend-core/src/*"]
        },

        "allowImportingTsExtensions": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,

        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ]
}
